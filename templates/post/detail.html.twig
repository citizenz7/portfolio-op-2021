{% extends 'base.html.twig' %}

{% block title %}{% trans %}Détails du Post :{% endtrans %} {{ posts.titre }}{% endblock %}

{% block body %}

<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <span></span>
                <ol>
                    <li><a href="{{ path('home') }}">{% trans %}Accueil{% endtrans %}</a></li>
                    <li><a href="{{ path('posts') }}">{% trans %}Liste des Posts{% endtrans %}</a></li>
                    <li>{% trans %}Post :{% endtrans %} {{ posts.titre }}</li>
                </ol>
            </div>

        </div>
    </section><!-- Breadcrumbs Section -->

    <!-- ======= News list ======= -->
    <section>
        <div class="container">
            <div class="row">
                <div class="col">
                    <h2>{{ posts.titre }}</h2>
                    <hr>

                    <div class="row">
                        <div class="col-lg-7 col-sm-12">
                            {% for cat in posts.categorie %}
                            <span class="badge text-dark border me-1">
                                {{ cat.titre }}
                            </span>
                            {% endfor %}
                            <p class="small text-muted mt-3">
                                {% trans %}Publié le{% endtrans %}
                                {{ posts.createdAt|format_datetime('medium', 'short') }}, {% trans %}par{% endtrans %}
                                {{ posts.auteur.prenom }} {{ posts.auteur.nom }}
                            </p>
                            <p class="mt-3">
                                {{ posts.contenu|raw }}
                            </p>
                            <p class="border p-3">
                                {% trans %}Lien vers le media :{% endtrans %} <a href="{{ posts.url }}"
                                    target="_blank">{{ posts.url }}</a>
                            </p>
                        </div>
                        <div class="col-lg-5 col-sm-12">
                            <img src="../uploads/posts/{{ posts.image }}" alt="{{ posts.titre }}"
                                class="img-fluid rounded ps-3">
                        </div>
                    </div>

                    {% include 'commentaire/form.html.twig' %}

                    {% include 'commentaire/commentaires.html.twig' %}

                </div>
            </div>
        </div>
    </section><!-- End Portfolio Details Section -->

</main><!-- End #main -->

{% endblock %}