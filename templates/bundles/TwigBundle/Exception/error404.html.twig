{% extends 'base.html.twig' %}

{% block title %}{% trans %}erreur{% endtrans %} {{ status_code }}{% endblock %}

{% block body %}

<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <span></span>
                <ol>
                    <li><a href="{{ path('home') }}">{% trans %}Accueil{% endtrans %}</a></li>
                    <li>{% trans %}Erreur{% endtrans %}</li>
                </ol>
            </div>

        </div>
    </section><!-- Breadcrumbs Section -->

    <!-- ======= Contact ======= -->
    <section>
        <div class="container">
            <div class="row gy-4">

                <div class="col mt-4 alert-danger py-5 px-3 text-center">
                    <h1 class="display-1 font-weight-bold">{% trans %}ERREUR{% endtrans %} {{ status_code }}</h1>
                    <h1 class="display-4 mb-5">{{ status_text }}</h1>
                    <h2>{% trans %}UH OH! Vous êtes perdu ?!!{% endtrans %}</h2>
                    <p>
                        {% trans %}La page que vous recherchez n'existe pas. Je ne comprends même pas comment vous êtes
                        arrivé(e) ici ! :D{% endtrans %}
                    </p>
                    <p>
                        {% trans %}Veuillez cliquer sur le bouton ci-dessous{% endtrans %}
                    </p>
                </div>
                <div class="mt-3 text-center">
                    <a class="btn btn-primary p-3 lead" href="{{ path('home') }}">{% trans %}Retour à la page
                        d'accueil{% endtrans %}</a>
                </div>

            </div>
        </div>
    </section>

</main>

{% endblock %}