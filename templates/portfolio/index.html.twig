{% extends 'base.html.twig' %}

{% block title %}{% trans %}Portfolio{% endtrans %}{% endblock %}

{% block body %}

<main id="main">

    <!-- ======= Breadcrumbs Section ======= -->
    <section class="breadcrumbs">
        <div class="container">

            <div class="d-flex justify-content-between align-items-center">
                <span></span>
                <ol>
                    <li><a href="{{ path('home') }}">{% trans %}Accueil{% endtrans %}</a></li>
                    <li>{% trans %}Portfolio{% endtrans %}</li>
                </ol>
            </div>

        </div>
    </section><!-- Breadcrumbs Section -->

    <section>
        <div class="container">
            <div class="row gy-4">
                <div class="col">
                    <h2>{% trans %}Portfolio{% endtrans %}</h2>
                    <hr>

                    <section id="portfolio" class="portfolio">
                        <div class="container">

                            <ul id="portfolio-flters" class="d-flex justify-content-center">
                                <li data-filter="*" class="filter-active">All</li>
                                <li data-filter=".filter-web">Web</li>
                                <li data-filter=".filter-school">School</li>
                                <li data-filter=".filter-certification">Certifications</li>
                            </ul>

                            <div class="row portfolio-container">

                                {% for fiche in fiches %}
                                <div class="col-lg-4 col-md-6 portfolio-item {{ fiche.filter }}">
                                    <div class="portfolio-img"><img src="../uploads/fiches/{{ fiche.image }}"
                                            class="img-fluid" alt="">
                                    </div>
                                    <div class="portfolio-info">
                                        <h4>{{ fiche.titre }}</h4>
                                        <p>{{ fiche.techno }}</p>
                                        <a href="../uploads/fiches/{{ fiche.image }}" data-gallery="portfolioGallery"
                                            class="portfolio-lightbox preview-link" title="{{ fiche.titre }}"><i
                                                class="bx bx-plus"></i></a>
                                        <a href="{{ path('detailportfolio', {'slug': fiche.slug}) }}"
                                            class="details-link" title="{% trans %}Plus de dÃ©tails{% endtrans %}"><i
                                                class="bx bx-link"></i></a>
                                    </div>
                                </div>
                                {% endfor %}

                            </div>

                        </div>

                    </section>

                </div>
            </div>
        </div>
    </section>

</main><!-- End #main -->

{% endblock %}